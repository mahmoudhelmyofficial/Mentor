@model ApplicationUser

@{
    ViewData["Title"] = $"Profile {@Model.UserName}";
}

<div class="row" style="margin-top:15px;">
    <div class="col-md-6">
        <h2 class="mt-3">@Model.UserName</h2>
        <div class="mt-3">
            <h5 class="d-inline">Location : </h5>
            <p class="d-inline">@Model.Location</p>
        </div>
        <div class="mt-3">
            <h5 class="d-inline">Ideustry : </h5>
            <p class="d-inline">@Model.Industry</p>
        </div>
        <div class="mt-3">
            <h5 class="d-inline">Company Size : </h5>
            <p class="d-inline">@Model.CompanySize</p>
            <p class="d-inline"> employees</p>
        </div>
        <div class="mt-3">
            <h5 class="d-inline">Specialities : </h5>
            <p class="d-inline">@Model.Specialities</p>
        </div>
    </div>
    <div class="col-md-6" >
        @if (User.Identity?.Name == Model.UserName)
        {
            <a asp-controller="EmployerProfiles" asp-action="Update" asp-route-user="@Model.UserName"
           class="btn btn-outline-primary  btn-publisher"><i class="fa-regular fa-pen-to-square"></i></a>
        }
    </div>
</div>




    <div>
        <h2 class="mt-4">OpenVacancies</h2>
        <hr />


        <div class="articles">
            <div class="container">
                @foreach (var item in Model.OpenVacancies)
                {
                    <div class="box parent">
                        <div class="content">
                            <h3>@item.Title</h3>
                            <p>@item.DateTime</p>
                            <p>@item.Description</p>
                            <div class="mt-3">
                                @if (User.IsInRole("Employee"))
                                {
                                <a asp-controller="ApplyForJobs" asp-action="opportunityDetials"
                                        asp-route-id="@item.JobId"
                                        class="btn btn-outline-primary">Apply</a>
                                }
                                @if (User.IsInRole("Employer") && User.Identity?.Name == Model.UserName)
                                {   
                                    <a asp-controller="ApplyForJobs" asp-action="Requestes"
                                        asp-route-id="@item.JobId" 
                                        class="btn btn-outline-primary">Requestes</a>
                                
                                    <a data-id="@item.JobId"
                                        class="btn btn-outline-danger btn-delete ms-2">Delete</a>
                                }

                            </div>
                        </div>
                        <div class="info">
                            <a asp-controller="Jobs" asp-action="Details"
                           asp-route-username="@item.JobId">Read More</a>

                            <i class="fas fa-long-arrow-alt-right"></i>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

<style>
     .btn-publisher {
        position: absolute;
        right: 140px;
        top: 100px;
    }
</style>