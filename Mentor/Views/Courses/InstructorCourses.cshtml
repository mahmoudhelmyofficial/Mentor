@model IEnumerable<Course>

@{
    ViewData["Title"] = "Jobs";
}

<div class="articles">
    <div class="container">
        @foreach (var item in Model)
            {
                <div class="box">
                  <div class="content">
                    <h3>@item.Title</h3>
                    <p>Created By You</p>
                    <p>@item.StudentsCount Students Subscibed</p>
                    <p>@item.PublishDate</p>
                    <p>@item.Description</p>
                    <p>@item.CoursePrice</p>
                  </div>
                  <div class="info">
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">Show More</a>
                    <i class="fas fa-long-arrow-alt-right"></i>
                  </div>
                </div>
            }
      </div>
</div>
